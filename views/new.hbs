<form action="/new" method="POST">
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">名稱* :</span>
    </div>
    <input class="form-control" type="text" name="name">
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">日期* :</span>
    </div>
    <input class="form-control" type="date" name="date">
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">類別* :</span>
    </div>
    <select class="custom-select" name="category" id="category">
      <option value="家居物業">家居物業</option>
      <option value="交通出行">交通出行</option>
      <option value="休閒娛樂">休閒娛樂</option>
      <option value="餐飲食品">餐飲食品</option>
      <option value="其他">其他</option>
    </select>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">金額* :</span>
    </div>
    <input class="form-control" type="number" name="amount" min="0">
  </div>

  <button class="btn btn-secondary" type="submit">新增</button>
</form>